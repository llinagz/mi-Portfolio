{
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "search.exclude": {
    "package-lock.json": true
  },
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": [
    "source.addMissingImports",
    "source.fixAll.eslint"
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "astro"
  ],
  "jest.autoRun": {
    "watch": true, // Start the jest with the watch flag
    "onSave": "test-src-file", // Trigger test run for the given test or source file upon save
    "onStartup": ["all-tests"] // Run all tests upon project launch
  },
  "jest.showCoverageOnLoad": true, // Show code coverage when the project is launched
  // Multiple language settings for json and jsonc files
  "[json][jsonc]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#32f960",
    "activityBar.background": "#32f960",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#9f83fb",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#15202b99",
    "sash.hoverBorder": "#32f960",
    "statusBar.background": "#07f13d",
    "statusBar.foreground": "#15202b",
    "statusBarItem.hoverBackground": "#06bf30",
    "statusBarItem.remoteBackground": "#07f13d",
    "statusBarItem.remoteForeground": "#15202b",
    "titleBar.activeBackground": "#07f13d",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveBackground": "#07f13d99",
    "titleBar.inactiveForeground": "#15202b99"
  },
  "peacock.color": "#07f13d"
}
